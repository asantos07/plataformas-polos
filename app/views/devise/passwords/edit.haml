= render(layout: 'devise/shared/external_layout', locals: { title: t('.change_your_password') }) do
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = f.hidden_field :reset_password_token
    .field
      = f.label :password, t('devise.passwords.edit.new_password'), html: { class: 'label' }
      = f.password_field :password, autofocus: true, autocomplete: "new-password", html: { class: 'input' }
      - if @minimum_password_length
        %p.help.is-info= t('devise.shared.minimum_password_length', count: @minimum_password_length)
    .field
      = f.label :password_confirmation, t('devise.passwords.edit.confirm_new_password'), html: { class: 'label' }
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .field
      .control
        %button.button.is-primary.is-fullwidth= t('devise.passwords.edit.change_my_password')
