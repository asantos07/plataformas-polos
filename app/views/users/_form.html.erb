<%= simple_form_for @user do |f| %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :roles, input_html: { size: 2 }, wrapper_html: { class: 'select is-multiple' } %>
  <%= f.input :password %>
  <%= f.input :password_confirmation, label: 'Confirmação da Senha' %>
  <div class="field is-grouped is-grouped-centered">
    <%= f.button :submit %>
  </div>
<% end %>
